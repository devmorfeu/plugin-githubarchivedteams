{
    "manifest_version": 3,
    "name": "Github Hide Archived",
    "description": "Hides archived projects from the times tab within the organization",
    "version": "1.0",
    "action": {
        "default_popup" : "./popup/popup.html"
    },
    "content_scripts": [
      {
        "js": ["./popup/theMagic.js"],
        "css": ["./popup/style.css"],
        "matches": [
          "*://github.com/orgs/*/teams/*/repositories"
        ]
      }
    ],
    "permissions": ["storage", "scripting", "activeTab"]
  }
