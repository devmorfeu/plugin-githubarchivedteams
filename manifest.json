{
    "manifest_version": 3,
    "name": "Github Hide Archived",
    "description": "Hides archived projects from the teams tab within the organization",
    "version": "1.0",
    "action": {
      "default_title": "Click to show an alert"
    },
    "content_scripts": [
      {
        "js": ["./src/service/github-service.js"],
        "matches": [
          "*://github.com/orgs/*/teams/*"
        ]
      }
    ],
    "background" : {
      "service_worker" :"./src/configuration/background.js"
    },

    "permissions": ["storage", "scripting", "activeTab", "declarativeContent"]
  }
